<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg_white_border_gray"
    android:layout_height="wrap_content">

    <me.zhanghai.android.materialratingbar.MaterialRatingBar
        android:id="@+id/rating_bar"
        android:layout_width="250dp"
        android:layout_height="36dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_15sdp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:id="@+id/edit_text_lay"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/rating_bar">

        <EditText
            android:id="@+id/edtReview"
            style="@style/tvReg"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/gray_outline_gradient"
            android:gravity="top|start"
            android:hint="@string/add_comments_optional"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/black"
            android:textSize="12dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_submit"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="40dp"
        android:layout_below="@+id/edit_text_lay"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/blue_fill_round_gradient">

        <TextView
            style="@style/tvMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp" />


    </RelativeLayout>



</RelativeLayout>