<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/_12sdp"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.libyasolutions.libyamarketplace.widget.TextViewFontH1
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/create_new_post"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerVertical="true"
                android:background="@drawable/background_border"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/ic_back_arrow_new"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="30dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edt_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                style="@style/tvReg"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="28dp"
                android:background="@drawable/bg_edit_text_normal"
                android:padding="8dp"
                android:textColor="@color/black_heading"
                android:textSize="15dp"
                android:inputType="text|textMultiLine"
                android:gravity="top|start"
                android:lines="5"
                android:hint="@string/write_post"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_shop_description"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="28dp"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginBottom="25dp"
                    android:layout_marginStart="12dp"
                    android:translationY="16dp"
                    android:background="@drawable/bg_edit_text_normal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:gravity="center"
                        android:text="@string/add_photo"
                        android:textColor="@color/grey_sub_heading"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iv_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:clipToPadding="false"/>

                </FrameLayout>

                <ImageView
                    android:id="@+id/iv_add_logo"
                    android:layout_width="45dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/content_description"
                    android:padding="6dp"
                    android:background="@drawable/blue_fill_round_gradient"
                    android:src="@drawable/ic_add1"
                    android:layout_gravity="left|top"/>

            </FrameLayout>
        </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_post_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="24dp"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_inactive"
                    android:layout_width="100dp"
                    android:layout_height="24dp"
                    android:background="@drawable/bg_border_grey"
                    android:gravity="center"
                    android:paddingHorizontal="4dp"
                    android:text="@string/inactive"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tv_active"
                    android:layout_width="100dp"
                    android:layout_height="24dp"
                    style="@style/tvReg"
                    android:gravity="center"
                    android:layout_marginStart="8dp"
                    android:text="@string/active"
                    android:textColor="@color/black"
                    android:background="@drawable/background_border_green"
                    android:textSize="14dp" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_create_product"
                android:layout_width="180dp"
                style="@style/tvMedium"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/blue_fill_round_gradient"
                android:text="@string/post"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>