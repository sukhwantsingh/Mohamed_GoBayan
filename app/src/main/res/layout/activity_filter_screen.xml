<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:padding="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_12sdp"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:background="@drawable/background_border"
            android:src="@drawable/ic_back_arrow_new" />


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblBuyerInformation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:paddingTop="@dimen/_12sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:textColor="@color/color_blue_greenish"
                    android:visibility="gone"
                    android:text="Search for" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_15sdp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:backgroundTint="@color/grey_back"
                    android:background="@drawable/bg_border_grey_new">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:buttonTint="@color/color_blue_dark"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shops"
                            android:paddingHorizontal="@dimen/_12sdp"
                            android:paddingVertical="@dimen/_10sdp"
                            android:textSize="@dimen/_11sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:textColor="@color/white"
                            android:drawablePadding="@dimen/_10sdp"
                            android:backgroundTint="@color/blue_button"
                            android:background="@drawable/back_blue_with_gray_border"
                            android:drawableStart="@drawable/ic_icon_metro_shop_whitye" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/color_blue_dark"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Products"
                            android:paddingHorizontal="@dimen/_12sdp"
                            android:paddingVertical="@dimen/_10sdp"
                            android:textSize="@dimen/_11sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:textColor="@color/color_blue_greenish"
                            android:drawablePadding="@dimen/_10sdp"
                            android:drawableTint="@color/blue_dark_button"
                            android:background="@drawable/back_blue_with_gray_border"
                            android:drawableStart="@drawable/ic_icon_metro_shop_whitye" />

                    </LinearLayout>

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:paddingTop="@dimen/_14sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:textColor="@color/color_blue_greenish"
                    android:text="@string/departments_and_categories" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:background="@drawable/bg_border_grey_new">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:buttonTint="@color/color_blue_dark"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="All Departments"
                            android:paddingHorizontal="@dimen/_15sdp"
                            android:paddingVertical="@dimen/_10sdp"
                            android:textSize="@dimen/_11sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:textColor="@color/white"
                            android:backgroundTint="@color/blue_button"
                            android:background="@drawable/back_blue_with_gray_border" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/_10sdp">

                        <RadioButton
                            android:id="@+id/radioBut"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:buttonTint="@color/color_blue_dark"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_toEndOf="@+id/radioBut"
                            android:background="@drawable/bg_white_corner_6"
                            android:drawablePadding="@dimen/_10sdp"
                            android:paddingHorizontal="@dimen/_15sdp"
                            android:paddingVertical="@dimen/_10sdp"
                            android:text="Select Department"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11sdp" />


                        <ImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:background="@drawable/background_border"
                            android:padding="@dimen/_3sdp"
                            android:src="@drawable/ic_arrow_down" />
                    </RelativeLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:paddingTop="@dimen/_14sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:textColor="@color/color_blue_greenish"
                    android:text="@string/location" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:background="@drawable/bg_border_grey_new">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:buttonTint="@color/color_blue_dark"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="All Cities"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="@dimen/_10sdp"
                            android:textSize="@dimen/_11sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:textColor="@color/white"
                            android:backgroundTint="@color/blue_button"
                            android:background="@drawable/back_blue_with_gray_border" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">

                        <RadioButton
                            android:id="@+id/radioButTwo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:buttonTint="@color/color_blue_dark"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_toEndOf="@+id/radioButTwo"
                            android:background="@drawable/bg_white_corner_6"
                            android:drawablePadding="@dimen/_10sdp"
                            android:paddingHorizontal="@dimen/_15sdp"
                            android:paddingVertical="@dimen/_10sdp"
                            android:text="Select City"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11sdp" />


                        <ImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:background="@drawable/background_border"
                            android:padding="@dimen/_3sdp"
                            android:src="@drawable/ic_arrow_down" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">

                        <RadioButton
                            android:id="@+id/radioButThree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:buttonTint="@color/color_blue_dark"
                            android:textSize="@dimen/_10sdp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_toEndOf="@+id/radioButThree"
                            android:background="@drawable/bg_white_corner_6"
                            android:orientation="vertical"
                            android:paddingHorizontal="@dimen/_15sdp"
                            android:paddingVertical="@dimen/_10sdp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="@dimen/_10sdp"
                                android:text="My Location"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11sdp" />

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <SeekBar
                                    android:id="@+id/sb_distance"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginBottom="10dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />


                                <TextView
                                    android:id="@+id/tv_all"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_11sdp"
                                    app:layout_constraintStart_toStartOf="@id/sb_distance"
                                    app:layout_constraintTop_toBottomOf="@id/sb_distance" />

                                <TextView
                                    android:id="@+id/tv_max_distance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:text="@string/text_0_km"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_11sdp"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/sb_distance" />
                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>


                    </RelativeLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:paddingTop="@dimen/_14sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:textColor="@color/color_blue_greenish"
                    android:text="Price" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:backgroundTint="@color/grey_back"
                    android:background="@drawable/bg_border_grey_new">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:buttonTint="@color/color_blue_dark"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Any Price"
                            android:paddingHorizontal="@dimen/_15sdp"
                            android:paddingVertical="@dimen/_10sdp"
                            android:textSize="@dimen/_11sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:textColor="@color/white"
                            android:backgroundTint="@color/blue_button"
                            android:background="@drawable/back_blue_with_gray_border" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">

                        <RadioButton
                            android:id="@+id/radioButFour"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:buttonTint="@color/color_blue_dark"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_toEndOf="@+id/radioButFour"
                            android:background="@drawable/bg_white_corner_6"
                            android:drawablePadding="@dimen/_10sdp"
                            android:paddingHorizontal="@dimen/_15sdp"
                            android:paddingVertical="@dimen/_10sdp"
                            android:text="Select Price"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11sdp" />


                        <ImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:background="@drawable/background_border"
                            android:padding="@dimen/_3sdp"
                            android:src="@drawable/ic_arrow_down" />
                    </RelativeLayout>

                </LinearLayout>


                <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="@dimen/_140sdp"
                    style="@style/customButton"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/color_dark_blue"
                    android:background="@drawable/bg_red_button_with_border"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:layout_marginVertical="@dimen/_20sdp"
                    android:layout_gravity="center_horizontal"
                    android:paddingHorizontal="@dimen/_15sdp"
                    android:paddingVertical="@dimen/_14sdp"
                    android:text="Apply Now" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


    </LinearLayout>
</layout>