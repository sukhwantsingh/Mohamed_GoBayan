<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginVertical="16dp"
            android:background="@drawable/background_border"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_back_arrow_new" />


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/imageView"
            android:clipToPadding="false"
            android:fillViewport="true"
            android:paddingBottom="70dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvh_searchFor"
                    style="@style/tvBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:paddingVertical="5dp"
                    android:text="@string/SearchFor"
                    android:textColor="@color/color_blue_greenish"
                    android:textSize="15dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/ll_searchfor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:background="@drawable/bg_border_grey_new"
                    android:backgroundTint="@color/grey_back"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_horizontal"
                    tools:visibility="visible"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_shop"
                        style="@style/tvReg"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:background="@drawable/blue_fill_round_gradient"
                        android:drawablePadding="@dimen/_10sdp"
                        android:paddingHorizontal="@dimen/_12sdp"
                        android:gravity="center"
                        android:paddingVertical="@dimen/_10sdp"
                        android:text="@string/shops"
                        android:textColor="@color/white"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/tv_products"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:background="@drawable/bg_white_corner_6"
                        android:drawablePadding="@dimen/_10sdp"
                        android:paddingHorizontal="@dimen/_12sdp"
                        android:paddingVertical="@dimen/_10sdp"
                        android:text="@string/products"
                        android:gravity="center"
                        android:textColor="@color/color_blue_greenish"
                        android:textSize="12dp" />

                </LinearLayout>


                <TextView
                    style="@style/tvBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:paddingTop="@dimen/_14sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:text="@string/departments_and_categories"
                    android:textColor="@color/color_blue_greenish"
                    android:textSize="15dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:background="@drawable/bg_border_grey_new"
                    android:backgroundTint="@color/grey_back"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_all_departs"
                            style="@style/tvBold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:background="@drawable/blue_fill_round_gradient"
                            android:paddingHorizontal="@dimen/_15sdp"
                            android:paddingVertical="@dimen/_10sdp"
                            android:text="@string/list_shop_home_all_department"
                            android:textColor="@color/white"
                            android:textSize="14dp" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv_choose_depart"
                            style="@style/tvBold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:background="@drawable/bg_white_corner_6"
                            android:drawablePadding="@dimen/_10sdp"
                            android:paddingHorizontal="@dimen/_15sdp"
                            android:paddingVertical="@dimen/_10sdp"
                            android:text="@string/list_shop_home_choose_department"
                            android:textColor="@color/black"
                            android:textSize="14dp" />


<!--                        <ImageView-->
<!--                            android:id="@+id/iv_choose_depart_arrow_down"-->
<!--                            android:layout_width="@dimen/_25sdp"-->
<!--                            android:layout_height="@dimen/_25sdp"-->
<!--                            android:layout_alignParentEnd="true"-->
<!--                            android:layout_centerVertical="true"-->
<!--                            android:layout_marginHorizontal="@dimen/_5sdp"-->
<!--                            android:background="@drawable/background_border"-->
<!--                            android:padding="@dimen/_3sdp"-->
<!--                            android:src="@drawable/ic_arrow_down" />-->
                    </RelativeLayout>

                </LinearLayout>

                <TextView
                    style="@style/tvBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:paddingTop="@dimen/_14sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:text="@string/location"
                    android:textColor="@color/color_blue_greenish"
                    android:textSize="15dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:background="@drawable/bg_border_grey_new"
                    android:backgroundTint="@color/grey_back"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_all_cities"
                            style="@style/tvBold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:background="@drawable/blue_fill_round_gradient"
                            android:paddingHorizontal="@dimen/_15sdp"
                            android:paddingVertical="@dimen/_10sdp"
                            android:text="@string/all_cities"
                            android:textColor="@color/white"
                            android:textSize="14dp" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">

                        <TextView
                            android:id="@+id/tv_select_city"
                            style="@style/tvBold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:background="@drawable/bg_white_corner_6"
                            android:drawablePadding="@dimen/_10sdp"
                            android:paddingHorizontal="@dimen/_15sdp"
                            android:paddingVertical="@dimen/_10sdp"
                            android:text="@string/select_city"
                            android:textColor="@color/black"
                            android:textSize="14dp" />

<!--                        <ImageView-->
<!--                            android:id="@+id/iv_select_city"-->
<!--                            android:layout_width="@dimen/_25sdp"-->
<!--                            android:layout_height="@dimen/_25sdp"-->
<!--                            android:layout_alignParentEnd="true"-->
<!--                            android:layout_centerVertical="true"-->
<!--                            android:layout_marginHorizontal="@dimen/_5sdp"-->
<!--                            android:background="@drawable/background_border"-->
<!--                            android:padding="@dimen/_3sdp"-->
<!--                            android:src="@drawable/ic_arrow_down" />-->

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">

                        <LinearLayout
                            android:id="@+id/ll_my_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:background="@drawable/bg_white_corner_6"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_my_locationh"
                                style="@style/tvBold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="@dimen/_10sdp"
                                android:paddingHorizontal="@dimen/_15sdp"
                                android:paddingVertical="12dp"
                                android:text="@string/my_location"
                                android:textColor="@color/black"
                                android:textSize="14dp" />

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="12dp">

                                <SeekBar
                                    android:id="@+id/sb_distance"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="12dp"
                                    android:layout_marginBottom="10dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />


                                <TextView
                                    android:id="@+id/tv_sb_stp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:text="@string/text_0_km"
                                    android:textColor="@color/black"
                                    android:textSize="12dp"
                                    android:layout_marginTop="5dp"
                                    app:layout_constraintStart_toStartOf="@id/sb_distance"
                                    app:layout_constraintTop_toBottomOf="@id/sb_distance" />

                                <TextView
                                    android:id="@+id/tv_max_distance"
                                    style="@style/tvReg"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="10dp"
                                    android:text="@string/text_45_km"
                                    android:textColor="@color/black"
                                    android:textSize="12dp"
                                    android:layout_marginTop="5dp"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/sb_distance" />

                                <TextView
                                    android:id="@+id/tv_distance"
                                    style="@style/tvReg"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:textColor="@color/blue_button"
                                    android:textSize="12dp"
                                    android:layout_marginTop="5dp"
                                    app:layout_constraintBottom_toBottomOf="@+id/tv_max_distance"
                                    app:layout_constraintEnd_toStartOf="@+id/tv_max_distance"
                                    app:layout_constraintStart_toEndOf="@+id/tv_sb_stp"
                                    app:layout_constraintTop_toTopOf="@id/tv_max_distance" />


                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>


                    </RelativeLayout>

                </LinearLayout>

                <TextView
                    style="@style/tvBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:paddingTop="@dimen/_14sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:text="@string/price"
                    android:textColor="@color/color_blue_greenish"
                    android:textSize="15dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:layout_marginBottom="85dp"
                    android:background="@drawable/bg_border_grey_new"
                    android:backgroundTint="@color/grey_back"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_any_price"
                            style="@style/tvBold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:background="@drawable/blue_fill_round_gradient"
                            android:paddingHorizontal="@dimen/_15sdp"
                            android:paddingVertical="@dimen/_10sdp"
                            android:text="@string/any_price"
                            android:textColor="@color/white"
                            android:textSize="14dp" />

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/rl_select_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">

                       <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:paddingBottom="12dp"
                            android:background="@drawable/bg_white_corner_6">

                           <TextView
                               android:id="@+id/tvh_sp"
                               style="@style/tvBold"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_marginBottom="8dp"
                               android:padding="12dp"
                               android:paddingHorizontal="5dp"
                               android:text="@string/select_price"
                               android:textColor="@color/black"
                               android:textSize="14dp" />

                            <EditText
                                android:id="@+id/edtMin"
                                style="@style/tvMedium"
                                android:layout_width="80dp"
                                android:layout_below="@+id/tvh_sp"
                                android:background="@drawable/bg_border_grey"
                                android:gravity="center"
                                android:hint="@string/min"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:layout_marginStart="16dp"
                                android:maxLength="9"
                                android:enabled="false"
                                android:paddingVertical="12dp"
                                android:singleLine="true"
                                android:textSize="12dp"
                                tools:text="78" />

                            <EditText
                                android:id="@+id/edtMax"
                                style="@style/tvMedium"
                                android:layout_width="80dp"
                                android:layout_below="@+id/tvh_sp"
                                android:layout_marginStart="16dp"
                                android:layout_toEndOf="@+id/edtMin"
                                android:background="@drawable/bg_border_grey"
                                android:gravity="center"
                                android:hint="@string/max"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:maxLength="9"
                                android:enabled="false"
                                android:paddingVertical="12dp"
                                android:singleLine="true"
                                android:textSize="12dp"
                                tools:text="12" />
                        </RelativeLayout>


                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


        <Button
            android:id="@+id/btnApplyFilter"
            style="@style/tvBold"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="@dimen/_20sdp"
            android:background="@drawable/bg_red_button_with_border"
            android:backgroundTint="@color/color_dark_blue"
            android:gravity="center"
            android:paddingVertical="8dp"
            android:text="@string/apply_now"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </RelativeLayout>
</layout>