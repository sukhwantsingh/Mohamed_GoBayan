<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/_15sdp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?android:attr/selectableItemBackground">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cns_lf1"
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_update_product"
        tools:ignore="MissingConstraints">

        <androidx.cardview.widget.CardView
            android:id="@+id/crd_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/iv_product"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@color/grey_back" />


        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/text_small_size_16"
            android:layout_marginStart="8dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/crd_image"
            app:layout_constraintTop_toTopOf="@+id/crd_image"
            tools:text="Autem Vel" />

        <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
            android:id="@+id/tv_description"
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textColor="@color/black"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/tv_product_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_product_name"
            tools:text="VAT 10%" />


        <TextView
            android:id="@+id/tv_product_code"
            android:layout_width="0dp"
            style="@style/tvReg"
            android:layout_height="wrap_content"
            android:textColor="@color/black_heading"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_product_name"
            app:layout_constraintStart_toStartOf="@+id/tv_product_name"
            tools:text="40$" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="0dp"
            style="@style/tvMedium"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_search"
            android:textSize="@dimen/text_size_normal"
            app:layout_constraintEnd_toEndOf="parent"
            android:singleLine="true"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="@+id/tv_product_code"
            app:layout_constraintBottom_toTopOf="@+id/tv_status"
            android:layout_marginBottom="5dp"
            tools:text="$23" />


        <TextView
            style="@style/tvReg"
            android:id="@+id/tv_status"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/background_border_green"
            android:gravity="center"
            android:textColor="@color/green"
            android:textSize="12dp"
            android:paddingVertical="3dp"
           app:layout_constraintStart_toEndOf="@+id/crd_image"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/crd_image"
            tools:text="Active" />





    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--</android.support.v7.widget.CardView>-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/text_shadow_1"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tv_update_product"
        android:layout_width="90dp"
        android:layout_height="@dimen/_25sdp"
        android:background="@drawable/blue_fill_round_gradient"
        android:gravity="center"
        android:text="@string/edit_product"
        android:textColor="@color/white"
        android:textSize="12dp"
        style="@style/tvMedium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/cns_lf1"
        android:layout_marginEnd="10dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_delete_product"
        android:layout_width="90dp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/blue_outline_gradient"
        android:gravity="center"
        style="@style/tvMedium"
        android:layout_marginTop="12dp"
        android:text="@string/delete_product"
        android:textColor="@color/blue_search"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_update_product"
        app:layout_constraintEnd_toEndOf="@+id/tv_update_product" />

</androidx.constraintlayout.widget.ConstraintLayout>
