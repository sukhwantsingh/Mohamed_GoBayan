<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutOrderHistory"
    android:layout_marginBottom="@dimen/_5sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <View
        android:id="@+id/firstView"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/gray_dark"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <ImageView
        android:id="@+id/iv_arrow_left"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/background_border"
        android:padding="@dimen/_3sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:rotation="-90"
        android:src="@drawable/ic_arrow_down" />

    <RelativeLayout
        android:id="@+id/firstSec"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginHorizontal="14dp"
        app:layout_constraintTop_toBottomOf="@+id/firstView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iv_arrow_left"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv1"
            style="@style/tvBold"
            android:text="@string/order_no"
            android:textColor="@color/black_heading"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tvSTT"
            style="@style/tvBold"
            android:layout_alignParentEnd="true"
            android:text="#123"
            android:textColor="@color/black_heading"
            android:textSize="15dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/secondSec"
        android:layout_width="0dp"
        android:layout_marginTop="14dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="14dp"
        app:layout_constraintTop_toBottomOf="@+id/firstSec"
        app:layout_constraintEnd_toStartOf="@+id/iv_arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv2"
            style="@style/tvReg"
            android:textColor="@color/black_heading"
            android:textSize="14dp"
            android:text="@string/date_creator" />

        <TextView
            android:id="@+id/tvTime"
            android:textSize="14dp"
            android:textColor="@color/black_heading"
            android:text="#123"
            style="@style/tvReg"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/thirdSec"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="14dp"
        app:layout_constraintEnd_toStartOf="@+id/iv_arrow_left"
        app:layout_constraintTop_toBottomOf="@+id/secondSec"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv3"
            style="@style/tvReg"
            android:textColor="@color/black_heading"
            android:textSize="14dp"
            android:text="@string/total_amountnew" />

        <TextView
            android:id="@+id/tvPriceTotal"
            android:textSize="14dp"
            android:textColor="@color/black_heading"
            android:text="#123"
            style="@style/tvReg"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/forthSec"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="14dp"
        app:layout_constraintEnd_toStartOf="@+id/iv_arrow_left"
        app:layout_constraintTop_toBottomOf="@+id/thirdSec"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv4"
            style="@style/tvReg"
            android:textColor="@color/black_heading"
            android:textSize="14dp"
            android:text="@string/status_new" />

        <TextView
            android:id="@+id/tvStatus"
            android:textSize="14dp"
            android:textColor="@color/black_heading"
            android:text="#123"
            style="@style/tvReg"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>



    <View
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/forthSec"
        android:background="@color/gray_dark"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>





</androidx.constraintlayout.widget.ConstraintLayout>