<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutRowShopCart"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/app_margin"
        android:background="@drawable/bg_custom_spinner"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/dimen_12x"
            android:layout_height="@dimen/dimen_12x"
            android:layout_margin="@dimen/dimen_1x">

            <ProgressBar
                android:id="@+id/progess"
                style="@android:style/Widget.ProgressBar.Small.Inverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

            <ImageView
                android:id="@+id/imgShop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true">

                <com.libyasolutions.libyamarketplace.widget.TextViewFontH1
                    android:id="@+id/lblShopName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/app_button_delete_in_row_width_height"
                    android:layout_marginTop="@dimen/dimen_05x"
                    android:singleLine="true"
                    android:text="Shop 1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_normal_2x" />

                <ImageView
                    android:id="@+id/btnDelete"
                    android:layout_width="@dimen/dimen_4x"
                    android:layout_height="@dimen/dimen_4x"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/app_margin_small"
                    android:background="@drawable/ic_close_grey600_36dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dimen_2x"
                    android:layout_height="@dimen/dimen_2x"
                    android:src="@drawable/ic_category" />

                <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                    android:id="@+id/lblCategoryName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_05x"
                    android:layout_marginTop="@dimen/app_margin_tiny"
                    android:singleLine="true"
                    android:text="Lee lee"
                    android:textColor="@color/gray_search"
                    android:textSize="@dimen/text_size_normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dimen_2x"
                    android:layout_height="@dimen/dimen_2x"
                    android:src="@drawable/ic_map_marker" />

                <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                    android:id="@+id/lblAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_05x"
                    android:layout_marginTop="@dimen/app_margin_tiny"
                    android:singleLine="true"
                    android:text="Lee lee"
                    android:textColor="@color/gray_search"
                    android:textSize="@dimen/text_size_normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_5x"
                android:layout_marginBottom="@dimen/dimen_1x"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/layoutSum"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_x4x"
                    android:layout_weight="4"
                    android:orientation="horizontal">

                    <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                        android:id="@+id/lblCurrency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="@dimen/dimen_05x"
                        android:text="@string/currency"
                        android:textColor="@color/primary_dark"
                        android:textSize="@dimen/dimen_x1x" />

                    <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                        android:id="@+id/lblTotalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@+id/lblCurrency"
                        android:text="1000"
                        android:textColor="@color/primary_dark"
                        android:textSize="@dimen/dimen_3x" />
                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dimen_05x"
                    android:layout_marginBottom="@dimen/dimen_05x"
                    android:background="@color/green" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dimen_x1x">

                    <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                        android:id="@+id/lblFoodNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="2 items"
                        android:textColor="@color/gray_dark"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_normal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">

                        <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                            android:id="@+id/lblVAT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="VAT: 10%"
                            android:textColor="@color/gray_dark"
                            android:textSize="@dimen/text_size_normal" />

                        <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                            android:id="@+id/lblShipping"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_1x"
                            android:layout_weight="1"
                            android:text="Ship: 10$"
                            android:textColor="@color/gray_dark"
                            android:textSize="@dimen/text_size_normal" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>