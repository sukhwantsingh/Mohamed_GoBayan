<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingTop="50dp"
        android:paddingBottom="10dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:background="@drawable/bg_container_info">

        <TextView
            style="@style/tvReg"
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_name"
            android:textSize="14dp"
            android:textColor="@color/black"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

         <TextView
            style="@style/tvReg"
            android:id="@+id/tv_value_product_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/bg_edit_text_normal"
            android:padding="6dp"
            android:gravity="right|center_vertical"
            android:textSize="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_product_name"
            app:layout_constraintRight_toRightOf="parent"/>

         <TextView
            style="@style/tvReg"
            android:id="@+id/tv_product_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/product_code"
            android:textSize="14dp"
            android:textColor="@color/black"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_value_product_name"/>

         <TextView
            style="@style/tvReg"
            android:id="@+id/tv_value_product_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/bg_edit_text_normal"
            android:padding="6dp"
            android:textSize="14dp"
            android:gravity="right|center_vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_product_code"
            app:layout_constraintRight_toRightOf="parent"/>

         <TextView
            style="@style/tvReg"
            android:id="@+id/tv_product_extra_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/extra_options_button_text"
            android:textSize="14dp"
            android:textColor="@color/black"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_value_product_code"/>

         <TextView
            style="@style/tvReg"
            android:id="@+id/tv_value_product_extra_option"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lines="5"
            android:gravity="right|top"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/bg_edit_text_normal"
            android:padding="6dp"
            android:textSize="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_product_extra_option"
            app:layout_constraintRight_toRightOf="parent"/>

         <TextView
            style="@style/tvReg"
            android:id="@+id/tv_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/product_price"
            android:textSize="14dp"
            android:textColor="@color/black"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_value_product_price"
            app:layout_constraintBottom_toBottomOf="@id/tv_value_product_price"/>

         <TextView
            style="@style/tvReg"
            android:id="@+id/tv_value_product_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="6dp"
            android:gravity="right|center_vertical"
            android:layout_marginRight="32dp"
            android:textSize="14dp"
            android:background="@drawable/bg_edit_text_normal"
            app:layout_constraintLeft_toLeftOf="@id/tv_value_product_extra_option"
            app:layout_constraintTop_toBottomOf="@id/tv_value_product_extra_option"
            app:layout_constraintRight_toLeftOf="@id/tv_product_price"/>

         <TextView
            style="@style/tvReg"
            android:id="@+id/tv_product_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/product_number"
            android:textSize="14dp"
            android:textColor="@color/black"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_value_product_number"
            app:layout_constraintBottom_toBottomOf="@id/tv_value_product_number"/>

         <TextView
            style="@style/tvReg"
            android:id="@+id/tv_value_product_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="6dp"
            android:textSize="14dp"
            android:gravity="right|center_vertical"
            android:background="@drawable/bg_edit_text_normal"
            app:layout_constraintLeft_toLeftOf="@id/tv_value_product_price"
            app:layout_constraintTop_toBottomOf="@id/tv_value_product_price"
            app:layout_constraintRight_toRightOf="@id/tv_value_product_price"/>

         <TextView
            style="@style/tvReg"
            android:id="@+id/tv_value_product_total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="6dp"
            android:textSize="14dp"
            android:gravity="right|center_vertical"
            android:background="@drawable/bg_edit_text_normal"
            app:layout_constraintLeft_toLeftOf="@id/tv_value_product_number"
            app:layout_constraintTop_toBottomOf="@id/tv_value_product_number"
            app:layout_constraintRight_toRightOf="@id/tv_value_product_number"/>

         <TextView
            style="@style/tvReg"
            android:id="@+id/tv_product_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/product_total"
            android:textSize="14dp"
            android:textColor="@color/black"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_value_product_total"
            app:layout_constraintBottom_toBottomOf="@id/tv_value_product_total"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:layout_width="170dp"
        android:layout_height="44dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_marginRight="10dp"
        android:layout_gravity="end|top"
        android:background="@drawable/bg_red_button_with_border"
        android:text="@string/product_info_button_text"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:fontFamily="@font/regular"
        android:textColor="@color/white"/>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_logo_product"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="8dp"
        android:layout_gravity="left|top"
        android:background="@drawable/bg_edit_text_normal"
        android:scaleType="centerCrop"
        app:riv_corner_radius="6dip"
        app:riv_border_width="1dip"
        app:riv_border_color="@color/gray_light"/>

</FrameLayout>