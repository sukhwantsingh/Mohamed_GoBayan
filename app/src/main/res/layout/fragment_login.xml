<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_7x"
        android:layout_gravity="center_vertical"
        android:background="@color/primary_dark"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="@dimen/dimen_4x"
            android:layout_height="@dimen/dimen_4x"
            android:layout_marginLeft="@dimen/dimen_1x"
            android:layout_marginRight="@dimen/dimen_1x"
            android:background="@drawable/spalsh_inore_new"
            android:contentDescription="@string/app_name" />

        <com.libyasolutions.libyamarketplace.widget.TextViewFontH1
            android:id="@+id/lblShopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:textColor="@color/cl_white"
            android:textSize="@dimen/text_size_normal_3x" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_x2x"
                android:layout_marginRight="@dimen/dimen_x2x"
                android:background="@drawable/bg_button_white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="@dimen/dimen_3x"
                    android:layout_height="@dimen/dimen_3x"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_1x"
                    android:layout_marginRight="@dimen/dimen_1x"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_account_grey600_36dp" />

                <com.libyasolutions.libyamarketplace.widget.MyEditText
                    android:id="@+id/txtUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cl_white"
                    android:ems="10"
                    android:hint="@string/userHint"
                    android:paddingBottom="@dimen/dimen_x1x"
                    android:paddingTop="@dimen/dimen_x1x"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_normal_1x">

                    <requestFocus />
                </com.libyasolutions.libyamarketplace.widget.MyEditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_x2x"
                android:layout_marginRight="@dimen/dimen_x2x"
                android:layout_marginTop="@dimen/dimen_x1x"
                android:background="@drawable/bg_button_white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dimen_3x"
                    android:layout_height="@dimen/dimen_3x"
                    android:layout_marginLeft="@dimen/dimen_1x"
                    android:layout_marginRight="@dimen/dimen_1x"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_key_grey600_36dp" />

                <EditText
                    android:id="@+id/txtPassWord"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cl_white"
                    android:hint="@string/passHint"
                    android:inputType="textPassword"
                    android:paddingBottom="@dimen/dimen_x1x"
                    android:paddingTop="@dimen/dimen_x1x"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_normal_1x" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_x2x"
                android:layout_marginRight="@dimen/dimen_x2x"
                android:layout_marginTop="@dimen/dimen_x1x"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btnLogin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_1x"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dimen_1x"
                    android:paddingTop="@dimen/dimen_1x"
                    android:text="@string/login"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_normal_1x" />

                <TextView
                    android:id="@+id/btnRegister"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dimen_1x"
                    android:paddingTop="@dimen/dimen_1x"
                    android:text="@string/register"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_normal_1x" />
            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_x2x"
                android:layout_marginRight="@dimen/dimen_x2x"
                android:layout_marginTop="@dimen/dimen_x1x"
                android:background="@drawable/bg_blue_button"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:src="@drawable/logo_facebook" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/btnLoginFacebook"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="left|center"
                    android:paddingBottom="@dimen/dimen_1x"
                    android:paddingTop="@dimen/dimen_1x"
                    android:text="@string/login_facebook"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_normal_1x" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_x2x"
                android:layout_marginRight="@dimen/dimen_x2x"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btnForgetPassword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dimen_1x"
                    android:paddingTop="@dimen/dimen_1x"
                    android:textColor="@color/blue_facebook"
                    android:textSize="@dimen/text_size_normal_1x" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>