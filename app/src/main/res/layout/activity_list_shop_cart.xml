<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="?actionBarSize">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="@dimen/_29sdp"
            android:layout_height="@dimen/_29sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:background="@drawable/background_border"
            android:padding="12dp"
            android:src="@drawable/ic_back_arrow_new" />

        <TextView
            android:id="@+id/lblShopName"
            style="@style/tvBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:text="@string/your_basket"
            android:textColor="@color/black_heading"
            android:textSize="16dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/layoutHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lsvShop"
            android:layout_width="match_parent"
            android:nestedScrollingEnabled="false"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvGone"
            style="@style/tvBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/message_no_item_menu"
            android:textColor="@color/black_heading"
            android:textSize="16dp"
            android:visibility="gone" />

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/white_arrow_down_icon"
            android:layout_alignBottom="@+id/lsvShop"
            android:layout_margin="16dp"
            android:visibility="gone" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/llRecycler"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="@dimen/dimen32"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll2">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen50"
            android:visibility="gone"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_1x">

            <ImageView
                android:layout_width="@dimen/dimen24"
                android:layout_height="@dimen/dimen24"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen16"
                android:src="@drawable/ic_shipping_new" />

            <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen16"
                android:gravity="center_vertical"
                android:text="@string/ship"
                android:textColor="@color/black_heading"
                android:textSize="@dimen/text_size_normal" />

            <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                android:id="@+id/tvPriceShipping"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dimen16"
                android:gravity="center_vertical|right"
                android:text="0"
                android:textColor="@color/black_heading"
                android:textSize="@dimen/text_size_normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen50"
            android:orientation="horizontal"
            android:visibility="gone"
            android:padding="@dimen/dimen_1x">
             <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                android:id="@+id/tvPriceVAT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dimen16"
                android:gravity="center_vertical|right"
                android:text="0"
                android:textColor="@color/black_heading"
                android:textSize="@dimen/text_size_normal" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/bg_border_grey"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/total_text"
                style="@style/tvMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total"
                android:textColor="@color/black_heading"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/tvTotalPrice"
                style="@style/tvReg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:text="$240"
                android:textColor="@color/black_heading"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/discounttext"
                style="@style/tvMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/total_text"
                android:layout_marginTop="16dp"
                android:textColor="@color/black_heading"
                android:textSize="@dimen/_12sdp"
                android:text="@string/discount_code" />

            <TextView
                android:id="@+id/discount_text"
                style="@style/tvReg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/discounttext"
                android:layout_alignBottom="@+id/discounttext"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                tools:text="S22"
                android:textColor="@color/black_heading"
                android:textSize="@dimen/_10sdp" />

            <EditText
                android:id="@+id/edComment"
                style="@style/tvMedium"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_below="@+id/discounttext"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_toStartOf="@+id/add_btn"
                android:background="@drawable/blue_outline_gradient"
                android:hint="@string/discount_code"
                android:paddingStart="8dp"
                android:singleLine="true"
                android:textSize="14dp" />
            <Button
                android:id="@+id/add_btn"
                style="@style/tvMedium"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_25sdp"
                 android:layout_alignTop="@+id/edComment"
                android:layout_alignBottom="@+id/edComment"
                android:layout_alignParentEnd="true"
                android:layout_marginVertical="4dp"
                android:layout_gravity="end"
                android:background="@drawable/blue_fill_round_gradient"
                android:text="Add"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/total_discounttext"
                style="@style/tvMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_btn"
                android:layout_marginTop="16dp"
                android:text="@string/total_after_discount"
                android:textColor="@color/black_heading"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/total_discount_text"
                style="@style/tvMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/total_discounttext"
                android:layout_alignBottom="@+id/total_discounttext"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:text="$200"
                android:textColor="@color/black_heading"
                android:textSize="@dimen/_12sdp" />


        </RelativeLayout>


        <TextView
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:id="@+id/continue_shop"
            style="@style/tvBold"
            android:background="@drawable/blue_outline_gradient"
            android:text="@string/continue_shopping"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="14dp"
            android:textColor="@color/blue_search"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/btnOrder"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/blue_fill_round_gradient"
            android:text="@string/check_out"
            android:gravity="center"
            android:textColor="@color/cl_white"
            style="@style/tvMedium"
            android:textSize="14dp" />

    </LinearLayout>




    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/dimen32"
        android:id="@+id/llbottom"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen50"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.libyasolutions.libyamarketplace.widget.TextViewFontH1
            android:layout_marginRight="@dimen/dimen16"
            android:id="@+id/tvTov"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/total"
            android:textColor="@color/black_heading"
            android:textSize="@dimen/text_size_normal" />

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>


