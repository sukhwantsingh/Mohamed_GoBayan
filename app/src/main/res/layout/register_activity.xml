<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_gravity="center"
            android:src="@drawable/logo_icon"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_20sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/login"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:fontFamily="@font/bold"
                android:textColor="@color/color_dark_grey"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/bold"
                android:background="@drawable/bg_red_button_with_border"
                android:layout_marginHorizontal="10dp"
                android:paddingHorizontal="@dimen/_12sdp"
                android:paddingVertical="@dimen/_8sdp"
                android:text="@string/sign_up"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp"/>
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layoutBuyerInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:textSize="@dimen/_14sdp"
                    android:paddingVertical="@dimen/_15sdp"
                    android:textColor="@color/color_blue_greenish"
                    android:text="@string/personal_info"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:textSize="@dimen/_11sdp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/color_dark_grey"
                    android:text="@string/first_name"/>


                <EditText
                    android:id="@+id/txtFullName"
                    android:layout_width="match_parent"
                    style="@style/et_custom"
                    android:background="@drawable/bg_border_grey"
                    android:hint="@string/first_name"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:padding="12dp"
                    android:singleLine="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:textSize="@dimen/_11sdp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/color_dark_grey"
                    android:text="@string/last_name"/>

                <EditText
                    android:layout_width="match_parent"
                    style="@style/et_custom"
                    android:background="@drawable/bg_border_grey"
                    android:hint="@string/last_name"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:padding="12dp"
                    android:singleLine="true" />



                <TextView
                    android:id="@+id/lblBuyerInformation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:textSize="@dimen/_14sdp"
                    android:paddingVertical="12dp"
                    android:textColor="@color/color_blue_greenish"
                    android:text="@string/contact_info"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:textSize="@dimen/_11sdp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/color_dark_grey"
                    android:text="@string/email"/>

                <EditText
                    android:id="@+id/txtEmail"
                    android:layout_width="match_parent"
                    android:background="@drawable/bg_border_grey"
                    android:hint="@string/emailnew"
                    style="@style/et_custom"
                    android:padding="12dp"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:paddingRight="12dp"
                    android:singleLine="true" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:textSize="@dimen/_11sdp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/color_dark_grey"
                    android:text="@string/phone"/>


                <EditText
                    android:id="@+id/txtPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_border_grey"
                    android:hint="@string/phone"
                    style="@style/et_custom"
                    android:imeOptions="actionNext"
                    android:inputType="phone"
                    android:padding="12dp"
                    android:singleLine="true" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen16"
                    android:visibility="gone"
                    android:orientation="vertical">


                    <EditText
                        android:id="@+id/txtAlPhone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen50"
                        android:background="@color/cl_white"
                        android:gravity="right"
                        android:hint="@string/alternate_phone_number"
                        android:imeOptions="actionNext"
                        android:inputType="phone"
                        android:paddingTop="@dimen/dimen_1x"
                        android:paddingRight="@dimen/dimen16"
                        android:paddingBottom="@dimen/dimen_1x"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_normal" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray_home_bottom" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutDeliveryInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblDeliveryInformation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:textSize="@dimen/_14sdp"
                    android:paddingVertical="12dp"
                    android:textColor="@color/color_blue_greenish"
                    android:text="@string/address_info_text"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:textSize="@dimen/_11sdp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/color_dark_grey"
                    android:text="@string/address"/>


                <EditText
                    android:id="@+id/txtAddress"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:background="@drawable/bg_border_grey"
                    android:hint="@string/address"
                    style="@style/et_custom"
                    android:maxLength="150"
                    android:gravity="top"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:padding="12dp"
                    android:singleLine="true" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold"
                        android:textSize="@dimen/_11sdp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/color_dark_grey"
                        android:text="@string/city"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="end"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/bold"
                        android:text="@string/selcte"
                        android:textColor="@color/green"
                        android:textSize="@dimen/_11sdp" />
                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_border_grey">

                    <EditText
                        android:id="@+id/txtCity"
                        style="@style/et_custom"
                        android:layout_width="match_parent"
                        android:background="@null"
                        android:hint="@string/city"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:padding="12dp"
                        android:singleLine="true" />


                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="12dp"
                        android:background="@drawable/background_border"
                        android:padding="@dimen/_3sdp"
                        android:src="@drawable/ic_arrow_down" />

                </RelativeLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen16"
                    android:visibility="gone"
                    android:orientation="vertical">


                    <EditText
                        android:id="@+id/txtZipcode"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen50"
                        android:background="@color/cl_white"
                        android:gravity="center_vertical|right"
                        android:hint="@string/zip_code"
                        android:inputType="phone"
                        android:paddingTop="@dimen/dimen_1x"
                        android:paddingRight="@dimen/dimen16"
                        android:paddingBottom="@dimen/dimen_1x"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_normal" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray_home_bottom" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutPaymentMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:textSize="@dimen/_14sdp"
                    android:paddingVertical="12dp"
                    android:textColor="@color/color_blue_greenish"
                    android:text="Account info"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:textSize="@dimen/_11sdp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/color_dark_grey"
                    android:text="@string/username"/>

                <EditText
                    style="@style/et_custom"
                    android:id="@+id/txtUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_border_grey"
                    android:hint="@string/lblUserName"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:singleLine="true"
                    android:padding="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:textSize="@dimen/_11sdp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/color_dark_grey"
                    android:text="@string/password"/>

                <EditText
                    style="@style/et_custom"
                    android:id="@+id/txtPassWord"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_border_grey"
                    android:hint="@string/password"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:singleLine="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:textSize="@dimen/_11sdp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/color_dark_grey"
                    android:text="@string/confirm_password"/>

                <EditText
                    android:id="@+id/txtRePassWord"
                    style="@style/et_custom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_border_grey"
                    android:hint="@string/confirm_password"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:singleLine="true" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginVertical="@dimen/_20sdp"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="160dp"
                    style="@style/customButton"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/color_dark_blue"
                    android:background="@drawable/bg_red_button_with_border"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="14dp"
                    android:text="@string/register" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>