<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_1x">

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgAvatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/avatar_default" />

            <ImageView
                android:id="@+id/imgStatus"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_offline" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_1x"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.libyasolutions.libyamarketplace.widget.TextViewFontEnglish
                    android:id="@+id/txtContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="userName"
                    android:textColor="@color/black" />

                <com.libyasolutions.libyamarketplace.widget.TextViewFontEnglish
                    android:id="@+id/txtDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:text="2017"
                    android:textColor="@color/secondary_text" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.libyasolutions.libyamarketplace.widget.TextViewFontEnglish
                    android:id="@+id/txtNewMsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="new msg"
                    android:textColor="@color/secondary_text" />

                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dimen_2x">

                    <ImageView
                        android:id="@+id/imgStatusNew"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:visibility="gone" />

                    <com.libyasolutions.libyamarketplace.widget.TextViewFontEnglish
                        android:id="@+id/tvCountMessage"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/new_mesage"
                        android:gravity="center"
                        android:text="1"
                        android:textAlignment="center"
                        android:textColor="@color/cl_white" />


                </RelativeLayout>
                <!--<com.libyasolutions.libyamarketplace.widget.TextViewFontEnglish-->
                <!--android:id="@+id/txtDate"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:text="2017"-->
                <!--android:textColor="@color/colorBorder" />-->
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>