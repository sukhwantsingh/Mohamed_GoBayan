<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/show"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutHeader"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_7x"
            android:background="@color/blue_button"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="@dimen/dimen_4x"
                android:layout_height="@dimen/dimen_4x"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_1x"
                android:layout_marginRight="@dimen/dimen_1x"
                android:background="@drawable/spalsh_inore_new" />

            <com.libyasolutions.libyamarketplace.widget.TextViewFontH1
                android:id="@+id/lblShopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/myAccount"
                android:textColor="@color/cl_white"
                android:textSize="@dimen/text_size_large" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_layout_radius"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/btnMyAccount"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_10x"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layoutMainMyAccount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/imgMyAcc"
                                android:layout_width="@dimen/dimen_x2x"
                                android:layout_height="@dimen/dimen_x2x"
                                android:src="@drawable/ic_editprofile_new" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                                android:id="@+id/textView1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:text="@string/edit_profile"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_large" />

                            <ImageView
                                android:layout_width="@dimen/dimen_2x"
                                android:layout_height="@dimen/dimen_2x"
                                android:layout_marginRight="@dimen/dimen_3x"
                                android:src="@drawable/ic_chevron_green_right" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layoutMainMyAccount">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8" />

                        <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                            android:id="@+id/lblUserName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:text="Tony"
                            android:gravity="top"
                            android:textColor="@color/gray_dark"
                            android:textSize="@dimen/text_size_small_2x" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/ic_kengang" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btnPreferences"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_10x"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layoutMainPreference"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="@dimen/dimen_x2x"
                                android:layout_height="@dimen/dimen_x2x"
                                android:src="@drawable/ic_setting_new" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:text="@string/preferences"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_large" />

                            <ImageView
                                android:layout_width="@dimen/dimen_2x"
                                android:layout_height="@dimen/dimen_2x"
                                android:layout_marginRight="@dimen/dimen_3x"
                                android:src="@drawable/ic_chevron_green_right" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layoutMainPreference">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8" />

                        <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                            android:id="@+id/lblPreferenceContent"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="top"
                            android:text="Food Drink, ha noi, 3km"
                            android:textColor="@color/gray_dark"
                            android:textSize="@dimen/text_size_small_2x" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/ic_kengang" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btnFavourites"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_10x"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layoutMainFavourite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="@dimen/dimen_x2x"
                                android:layout_height="@dimen/dimen_x2x"
                                android:src="@drawable/ic_favorite_new" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:text="@string/my_favourites"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_large" />

                            <ImageView
                                android:layout_width="@dimen/dimen_2x"
                                android:layout_height="@dimen/dimen_2x"
                                android:layout_marginRight="@dimen/dimen_3x"
                                android:src="@drawable/ic_chevron_green_right" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:layout_below="@+id/layoutMainFavourite">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8" />

                        <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                            android:id="@+id/lblFavouriteContent"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="top"
                            android:text="3 shops, 10 products"
                            android:textColor="@color/gray_dark"
                            android:textSize="@dimen/text_size_small_2x" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/ic_kengang" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btnHistoryOrder"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_10x"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layoutMainOrders"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="@dimen/dimen_x2x"
                                android:layout_height="@dimen/dimen_x2x"
                                android:src="@drawable/ic_history_new" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:text="@string/history"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_large" />

                            <ImageView
                                android:layout_width="@dimen/dimen_2x"
                                android:layout_height="@dimen/dimen_2x"
                                android:layout_marginRight="@dimen/dimen_3x"
                                android:src="@drawable/ic_chevron_green_right" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layoutMainOrders">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8" />

                        <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                            android:id="@+id/lblOrderContent"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:text="10 orders in histories"
                            android:textColor="@color/gray_dark"
                            android:textSize="@dimen/text_size_small_2x" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/ic_kengang" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btnFeedback"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_10x"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layoutMainFeedback"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="@dimen/dimen_x2x"
                                android:layout_height="@dimen/dimen_x2x"
                                android:src="@drawable/ic_feedback_new" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:text="@string/feedBack"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_large" />

                            <ImageView
                                android:layout_width="@dimen/dimen_2x"
                                android:layout_height="@dimen/dimen_2x"
                                android:layout_marginRight="@dimen/dimen_3x"
                                android:src="@drawable/ic_chevron_green_right" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layoutMainFeedback">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8" />

                        <TextView
                            android:id="@+id/lblFeebackContent"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:text="@string/feedBack_text"
                            android:textColor="@color/gray_dark"
                            android:textSize="@dimen/text_size_small_2x" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/ic_kengang" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btnLogout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_10x"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layoutMainLogout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="@dimen/dimen_x2x"
                                android:layout_height="@dimen/dimen_x2x"
                                android:src="@drawable/ic_logout_new" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:text="@string/logout"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_large" />

                            <ImageView
                                android:layout_width="@dimen/dimen_2x"
                                android:layout_height="@dimen/dimen_2x"
                                android:layout_marginRight="@dimen/dimen_3x"
                                android:src="@drawable/ic_chevron_green_right" />
                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/ic_kengang" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>