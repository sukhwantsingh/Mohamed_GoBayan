<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/toolbarSec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_12sdp"
            android:layout_marginHorizontal="@dimen/_12sdp">

            <ImageView
                android:id="@+id/default_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_border_grey"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_user_photo" />

            <TextView
                android:id="@+id/tvHello"
                style="@style/tvReg"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/default_img"
                android:text="@string/hello"
                android:textColor="@color/blue_dark_button"
                android:textSize="@dimen/_11sdp" />

            <TextView
                style="@style/tvBold"
                android:layout_below="@+id/tvHello"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/default_img"
                android:text="User Name"
                android:textColor="@color/black_heading"
                android:textSize="14dp" />

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/gray_background_round"
                android:backgroundTint="@color/border_gray"
                android:src="@drawable/app_icon" />

        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbarSec"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:orientation="vertical"
                android:paddingBottom="50dp"
                android:clipToPadding="false"
                android:paddingTop="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/layout_search"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_border_grey"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/_3sdp">

                        <FrameLayout
                            android:id="@+id/container_search"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingStart="@dimen/_12sdp">

                            <ImageView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:src="@drawable/ic_search_new"
                                app:tint="@color/blue_dark_button" />

                        </FrameLayout>

                        <EditText
                            android:id="@+id/edt_search"
                            style="@style/tvReg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="@string/search_your_house"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:padding="@dimen/_10sdp"
                            android:singleLine="true"
                            android:textColor="@color/black_heading"
                            android:textColorHint="@color/gray_dark"
                            android:textSize="14dp" />

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:background="@drawable/bg_border_grey">

                        <ImageView
                            android:id="@+id/filterImage"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_gravity="center"
                            android:contentDescription="@string/content_description"
                            android:padding="@dimen/_11sdp"
                            android:src="@drawable/ic_filter_icon_new" />

                    </FrameLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="3"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_12sdp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/blue_fill_round_gradient"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:paddingVertical="@dimen/_12sdp">

                        <ImageView
                            android:id="@+id/iv_search_by_distance"
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:src="@drawable/ic_location_b_new"
                            app:tint="@color/white" />

                        <TextView
                            style="@style/tvMedium"
                            android:layout_marginStart="5dp"
                            android:text="@string/my_location"
                            android:textColor="@color/white"
                            android:textSize="12dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnShops"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_border_grey"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:paddingVertical="@dimen/_12sdp">

                        <ImageView
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:src="@drawable/ic_icon_metro_shop_whitye"
                            app:tint="@color/blue_dark_button" />

                        <TextView
                            style="@style/tvMedium"
                            android:layout_marginStart="8dp"
                            android:text="@string/shops"
                            android:textColor="@color/blue_dark_button"
                            android:textSize="12dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnMenus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/bg_border_grey"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:paddingVertical="@dimen/_12sdp">

                        <ImageView
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:src="@drawable/ic_location_b_new" />

                        <TextView
                            android:layout_marginStart="8dp"
                            android:text="@string/products"
                            style="@style/tvMedium"
                            android:textColor="@color/blue_dark_button"
                            android:textSize="12dp" />

                    </LinearLayout>


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_15sdp">

                    <TextView
                        android:id="@+id/tvShopsHeading"
                        style="@style/tvBold"
                        android:text="@string/shops_recommend_for_you"
                        android:textColor="@color/color_blue_greenish"
                        android:textSize="14dp" />

                    <TextView
                        style="@style/tvMedium"
                        android:layout_alignTop="@+id/tvShopsHeading"
                        android:layout_alignBottom="@+id/tvShopsHeading"
                        android:layout_alignParentEnd="true"
                        android:gravity="center"
                        android:text="@string/view_all"
                        android:textColor="@color/blue_dark_button"
                        android:textSize="11dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/tvRecycleShopRecommend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvShopsHeading"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/items_my_shops" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_15sdp">

                    <TextView
                        android:id="@+id/tvShopsHeadingTwo"
                        style="@style/tvBold"
                        android:text="@string/products_recommend_for_you"
                        android:textColor="@color/color_blue_greenish"
                        android:textSize="14dp" />

                    <TextView
                        style="@style/tvMedium"
                        android:layout_alignTop="@+id/tvShopsHeadingTwo"
                        android:layout_alignBottom="@+id/tvShopsHeadingTwo"
                        android:layout_alignParentEnd="true"
                        android:gravity="center"
                        android:text="@string/view_all"
                        android:textColor="@color/blue_dark_button"
                        android:textSize="11dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/tvRecycleProductRecommend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvShopsHeadingTwo"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/items_my_products" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_15sdp">

                    <TextView
                        android:id="@+id/tvShopsHeadingThree"
                        style="@style/tvBold"
                        android:text="@string/shops_nearby_you"
                        android:textColor="@color/color_blue_greenish"
                        android:textSize="14dp" />

                    <TextView
                        style="@style/tvMedium"
                        android:layout_alignParentEnd="true"
                        android:layout_alignTop="@+id/tvShopsHeadingThree"
                        android:layout_alignBottom="@+id/tvShopsHeadingThree"
                        android:text="@string/view_all"
                        android:textColor="@color/blue_dark_button"
                        android:textSize="11dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/tvRecycleShopNearby"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvShopsHeadingThree"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/items_my_favourite_shops" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_15sdp">

                    <TextView
                        android:id="@+id/tvShopsHeadingFour"
                        style="@style/tvBold"
                        android:text="@string/products_nearby_you"
                        android:textColor="@color/color_blue_greenish"
                        android:textSize="14dp" />

                    <TextView
                        style="@style/tvMedium"
                        android:layout_alignParentEnd="true"
                        android:layout_alignTop="@+id/tvShopsHeadingFour"
                        android:layout_alignBottom="@+id/tvShopsHeadingFour"
                        android:text="@string/view_all"
                        android:textColor="@color/blue_dark_button"
                        android:textSize="11dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/tvRecycleProductNearby"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvShopsHeadingFour"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/items_my_favourite_products" />

                </RelativeLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


        <androidx.cardview.widget.CardView
            android:id="@+id/bottomSec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="48dp"
            android:visibility="visible"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp">

                <ImageView
                    android:id="@+id/iv_home"
                    android:layout_width="@dimen/_29sdp"
                    android:layout_height="@dimen/_29sdp"
                    android:background="@drawable/bg_border_grey"
                    android:padding="9dp"
                    android:src="@drawable/ic_home_new" />

                <ImageView
                    android:id="@+id/iv_cart"
                    android:layout_width="@dimen/_29sdp"
                    android:layout_height="@dimen/_29sdp"
                    android:background="@drawable/bg_border_grey"
                    android:padding="9dp"
                    android:layout_marginHorizontal="40dp"
                    android:src="@drawable/ic_cart_new" />

                <ImageView
                    android:id="@+id/iv_setting"
                    android:layout_width="@dimen/_29sdp"
                    android:layout_height="@dimen/_29sdp"
                    android:background="@drawable/bg_border_grey"
                    android:padding="9dp"
                    android:src="@drawable/ic_setting_new_two" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>
</layout>