<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_5sdp"
    xmlns:tools="http://schemas.android.com/tools">
    <View
        android:id="@+id/viewFirst"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_dark"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_shop"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@+id/viewFirst"
        tools:src="@drawable/bg_foood_details"
        android:layout_marginStart="@dimen/_10sdp"
        android:contentDescription="@string/content_description"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainSec"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintStart_toEndOf="@+id/iv_shop"
        app:layout_constraintTop_toBottomOf="@+id/viewFirst">

        <TextView
            android:id="@+id/tv_edit_shop"
            android:layout_width="@dimen/_85sdp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/blue_button"
            android:background="@drawable/bg_red_button_with_border"
            android:text="@string/edit_shop"
            style="@style/tvReg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/white"
            android:paddingVertical="@dimen/_8sdp"
            android:gravity="center"
            android:textSize="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/tv_watch_shop"
            style="@style/tvReg"
            android:layout_width="@dimen/_85sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_outline_gradient"
            android:text="@string/see_shop"
            android:textColor="@color/blue_button"
            android:paddingVertical="@dimen/_8sdp"
            android:gravity="center"
            android:layout_marginTop="@dimen/_12sdp"
            android:foreground="?attr/selectableItemBackground"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_edit_shop"/>

        <com.libyasolutions.libyamarketplace.widget.TextViewFontH1
            android:id="@+id/tv_shop_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold"
            style="@style/tvBold"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/_16sdp"
            android:maxLines="1"
            tools:text="Autem Vel"
            android:layout_marginStart="@dimen/_8sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_watch_shop"/>

        <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
            android:id="@+id/tv_description"
            android:layout_width="0dp"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginLeft="8dp"
            android:textColor="@color/black"
            tools:text="VAT 10%"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="@id/tv_shop_name"
            app:layout_constraintTop_toBottomOf="@id/tv_shop_name"
            app:layout_constraintLeft_toRightOf="@id/tv_watch_shop"/>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/bg_red_border"
            android:paddingVertical="@dimen/_3sdp"
            android:gravity="center"
            tools:text="Active"
            style="@style/tvReg"
            android:textSize="13dp"
            android:layout_marginStart="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent" />

        <ToggleButton
            android:layout_width="wrap_content"
            android:text="chat"
            app:layout_constraintRight_toRightOf="parent"
            android:textOn="Chat On"
            android:visibility="gone"
            android:id="@+id/chatToggle"
            android:textOff="Chat Off"
            app:layout_constraintTop_toBottomOf="@+id/tv_status"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@color/gray_dark"
        app:layout_constraintTop_toBottomOf="@+id/mainSec" />

</androidx.constraintlayout.widget.ConstraintLayout>
