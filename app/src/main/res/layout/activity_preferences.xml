<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/main_background_color"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_7x"
        android:background="@color/primary_dark"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="@dimen/dimen_x3x"
            android:layout_height="@dimen/dimen_x3x"
            android:layout_marginLeft="@dimen/dimen_1x"
            android:layout_marginRight="@dimen/dimen_1x"
            android:background="@drawable/ic_backs" />

        <com.libyasolutions.libyamarketplace.widget.TextViewFontH1
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/preferences"
            android:textColor="@color/cl_white"
            android:textSize="@dimen/text_size_normal_3x" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_1x"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spnCategories"
            android:layout_width="0.0dp"
            android:layout_height="@dimen/dimen_5x"
            android:layout_weight="1.0"
            android:background="@drawable/bg_custom_spinner"
            android:gravity="center_vertical" />

        <Spinner
            android:id="@+id/spnCity"
            android:layout_width="0.0dp"
            android:layout_height="@dimen/dimen_5x"
            android:layout_marginLeft="@dimen/dimen_1x"
            android:layout_weight="1.0"
            android:background="@drawable/bg_custom_spinner" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_5x"
        android:layout_margin="@dimen/dimen_1x"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dimen_1x"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btnSelectMenu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_button_not_select_left"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgticMenu"
                    android:layout_width="@dimen/dimen_1x"
                    android:layout_height="@dimen/dimen_1x"
                    android:layout_marginRight="@dimen/dimen_05x"
                    android:src="@drawable/ic_tic"
                    android:visibility="gone" />

                <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                    android:id="@+id/lblMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/menu"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_small_3x" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnSelectShop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_button_select_right"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgticShop"
                    android:layout_width="@dimen/dimen_1x"
                    android:layout_height="@dimen/dimen_1x"
                    android:layout_marginRight="@dimen/dimen_05x"
                    android:src="@drawable/ic_tic" />

                <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                    android:id="@+id/lblShop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shop"
                    android:textColor="@color/cl_white"
                    android:textSize="@dimen/text_size_small_3x" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btnSelectAll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_button_not_select_left"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgTickAll"
                    android:layout_width="@dimen/dimen_1x"
                    android:layout_height="@dimen/dimen_1x"
                    android:layout_marginRight="@dimen/dimen_05x"
                    android:src="@drawable/ic_tic"
                    android:visibility="gone" />

                <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                    android:id="@+id/lblAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/all"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_small_3x" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnSelectOpen"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_button_select_right"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgTickOpen"
                    android:layout_width="@dimen/dimen_1x"
                    android:layout_height="@dimen/dimen_1x"
                    android:layout_marginRight="@dimen/dimen_05x"
                    android:src="@drawable/ic_tic" />

                <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                    android:id="@+id/lblOpen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/open"
                    android:textColor="@color/cl_white"
                    android:textSize="@dimen/text_size_small_3x" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_1x"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/distance"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/text_size_normal" />

            <com.libyasolutions.libyamarketplace.widget.TextViewFontH1
                android:id="@+id/lbl_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_1x"
                android:text="All"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_05x">

            <LinearLayout
                android:id="@+id/layoutText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                    android:id="@+id/lbl_left"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:text="@string/all"
                    android:textColor="@color/gray_dark" />

                <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                    android:id="@+id/lbl_right"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:text="@string/max_distance"
                    android:textColor="@color/gray_dark" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/skb_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutText"
                android:max="100"
                android:paddingLeft="@dimen/dimen_2x"
                android:paddingRight="@dimen/dimen_2x"
                android:progress="0"
                android:progressDrawable="@drawable/customize_seekbar_progress"
                android:thumb="@drawable/customize_seekbar_thumb" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_1x"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spnSortBy"
            android:layout_width="0.0dp"
            android:layout_height="@dimen/dimen_5x"
            android:layout_weight="1.0"
            android:background="@drawable/bg_custom_spinner"
            android:gravity="center_vertical" />

        <Spinner
            android:id="@+id/spnSortType"
            android:layout_width="0.0dp"
            android:layout_height="@dimen/dimen_5x"
            android:layout_marginLeft="@dimen/dimen_1x"
            android:layout_weight="1.0"
            android:background="@drawable/bg_custom_spinner" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_1x"
        android:layout_marginRight="@dimen/dimen_1x"
        android:layout_marginTop="@dimen/dimen_5x"
        android:gravity="center"
        android:orientation="vertical">

        <com.libyasolutions.libyamarketplace.widget.MyButton
            android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_5x"
            android:paddingLeft="@dimen/dimen_x1x"
            android:paddingRight="@dimen/dimen_x1x"
            android:background="@drawable/bg_button"
            android:text="@string/save_changes"
            android:textColor="@color/cl_white"
            android:textSize="@dimen/text_size_normal_1x" />
    </LinearLayout>

</LinearLayout>