<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background_color"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_7x"
        android:background="@color/primary_dark"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="@dimen/dimen_3x"
            android:layout_height="@dimen/dimen_x3x"
            android:layout_marginLeft="@dimen/dimen_1x"
            android:layout_marginRight="@dimen/dimen_1x"
            android:src="@drawable/ic_backs" />

        <com.libyasolutions.libyamarketplace.widget.TextViewFontH1
            android:id="@+id/lblShopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/orderDetails"
            android:textColor="@color/cl_white"
            android:textSize="@dimen/text_size_normal_3x" />
    </LinearLayout>

    <ListView
        android:id="@+id/lsvShop"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/dimen_1x"
        android:layout_weight="1"
        android:divider="@null"
        android:dividerHeight="0dp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/primary_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cl_white"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_x1x">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dimen_3x"
                android:layout_height="@dimen/dimen_3x"
                android:background="@drawable/ic_history_grey600_24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_1x"
            android:layout_weight="0.7"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.libyasolutions.libyamarketplace.widget.TextViewFontH1
                    android:id="@+id/lblSTT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_normal_2x" />

                <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                    android:id="@+id/lblOrderTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/text_size_small_3x" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:orientation="vertical">

                <com.libyasolutions.libyamarketplace.widget.TextViewFontH1
                    android:id="@+id/lblTotalH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/app_margin_small"
                    android:textColor="@color/primary_dark"
                    android:textSize="@dimen/text_size_normal_2x" />

                <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                    android:id="@+id/lblStatusOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/app_margin_small"
                    android:text="TextView"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgContinue"
                android:layout_width="@dimen/dimen_x3x"
                android:layout_height="@dimen/dimen_x3x"
                android:layout_marginLeft="@dimen/dimen_1x"
                android:layout_marginRight="@dimen/dimen_x1x"
                android:background="@drawable/ic_chevron_right_grey600_36dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

