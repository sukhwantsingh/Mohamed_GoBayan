<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="12dp"
    app:cardPreventCornerOverlap="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/imgShop"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/productimage" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_toEndOf="@+id/imgShop">

            <TextView
                android:id="@+id/lblShopName"
                style="@style/tvBold"
                android:text="@string/product_name"
                android:textColor="@color/color_blue_greenish"
                android:textSize="@dimen/_14sdp"
                android:singleLine="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />



            <TextView
                android:id="@+id/lblCategoryName"
                style="@style/tvReg"
                android:text="@string/dummyContent"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/_9sdp"
                android:maxLines="3"
                android:layout_marginTop="@dimen/_2sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lblShopName" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="@dimen/dimen100"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/tag_menu_ar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/tvStockSec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblCategoryName">
                <TextView
                    android:id="@+id/tvStock"
                    style="@style/tvBold"
                    android:text="Stocks left"
                    android:textColor="@color/green"
                    android:textSize="11dp" />

                <TextView
                    style="@style/tvReg"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:text="75"
                    android:textColor="@color/black"
                    android:textSize="12dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvPriceSale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="20 D.L"
                android:fontFamily="@font/bold"
                android:textColor="@color/color_dark_blue"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvStockSec"/>

            <ImageView
                android:id="@+id/heartIcon"
                android:src="@drawable/ic_heart_b"
                app:layout_constraintEnd_toEndOf="parent"
                app:tint="@color/red"
                android:layout_marginBottom="@dimen/_5sdp"
                app:layout_constraintBottom_toTopOf="@+id/rtbRating"
                android:layout_width="18dp"
                android:layout_height="18dp"/>

            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:id="@+id/rtbRating"
                style="@style/Widget.AppCompat.RatingBar"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen20"
                android:max="5"
                android:numStars="5"
                android:textColor="@color/gray_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvStockSec"            android:backgroundTint="@color/orange"
                app:mrb_progressTint="@color/orange"/>
            <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                android:id="@+id/tvPromotions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen8"
                android:text="@string/off_20"
                android:textColor="@color/cl_white"
                android:textSize="@dimen/dimen16"
                android:visibility="gone"
                app:layout_constraintRight_toRightOf="@id/imageView2"
                app:layout_constraintTop_toTopOf="@id/lblCategoryName" />

            <com.libyasolutions.libyamarketplace.widget.TextViewFontH1
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen8"
                android:text="25$"
                android:textColor="@color/cl_white"
                android:textSize="@dimen/dimen16"
                android:visibility="gone"
                app:layout_constraintRight_toRightOf="@id/imageView2"
                app:layout_constraintTop_toTopOf="@id/lblShopName" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>
