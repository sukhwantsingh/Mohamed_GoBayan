<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="4dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/crd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
       >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/mainSection"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:cardElevation="0dp"
                android:background="@drawable/back_blue_with_gray_border"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/imgShop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@color/gray_light" />

            </androidx.cardview.widget.CardView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_toEndOf="@+id/mainSection">

                <TextView
                    android:id="@+id/lblShopName"
                    style="@style/tvBold"
                    android:layout_width="0dp"
                    android:text="@string/product_name"
                    android:textColor="@color/color_blue_greenish"
                    android:textSize="18dp"
                    android:singleLine="true"
                    app:layout_constraintEnd_toStartOf="@+id/vl_divide"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <RelativeLayout
                    android:id="@+id/rl_options"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    app:layout_constraintStart_toStartOf="@+id/lblShopName"
                    app:layout_constraintTop_toBottomOf="@+id/lblShopName"
                    android:layout_alignParentTop="true">
                   <TextView
                        android:id="@+id/color_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/color"
                        style="@style/tvBold"
                        android:textColor="@color/black_heading"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/color_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_toEndOf="@+id/color_text"
                        android:text="Red"
                        style="@style/tvBold"
                        android:textColor="@color/black_heading"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/size_text"
                        style="@style/tvBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/color_text"
                        android:layout_marginTop="4dp"
                        android:text="@string/size"
                        android:textColor="@color/black_heading"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/size_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       android:layout_alignTop="@+id/size_text"
                        android:layout_alignBottom="@+id/size_text"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_toEndOf="@+id/color_text"
                        android:text="M"
                        style="@style/tvBold"
                        android:textColor="@color/black_heading"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/quality_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/size_text"
                        android:layout_marginTop="4dp"
                        android:text="@string/quality"
                        style="@style/tvBold"
                        android:textColor="@color/black_heading"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/quality_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/quality_text"
                        android:layout_alignBottom="@+id/quality_text"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_toEndOf="@+id/color_text"
                        android:text="Good"
                        style="@style/tvBold"
                        android:textColor="@color/black_heading"
                        android:textSize="@dimen/_10sdp" />


                </RelativeLayout>
                <View
                    android:id="@+id/vl_divide"
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/ll_end"
                    android:background="@color/gray_dark" />

                <LinearLayout
                    android:id="@+id/ll_end"
                    android:layout_width="70dp"
                    android:orientation="vertical"
                    android:paddingHorizontal="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/lblTotalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/tvBold"
                        android:text="1000"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:id="@+id/lay"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@color/gray_dark" />

                    <TextView
                        android:id="@+id/lblFoodNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:text="7X"
                        style="@style/tvBold"
                        android:textColor="@color/black"
                        android:textSize="13dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:id="@+id/lay2"
                        android:background="@color/gray_dark" />

                    <ImageView
                        android:id="@+id/btnDelete"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/circle_light_gray"
                        android:padding="8dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:src="@drawable/delete_dark_gray_icon" />


                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/crd2"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="match_parent"
        android:background="@color/black_tranper70"
        android:elevation="4dp"
        app:cardBackgroundColor="@color/cl_white"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/crd">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="match_parent">


            <com.libyasolutions.libyamarketplace.widget.TextViewFontH1
                android:id="@+id/lblShopName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_small_size_16"
                android:text="Autem Vel"
                android:visibility="invisible"
                android:textColor="@color/black"
                android:textSize="@dimen/text_small_size_16"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

             <com.libyasolutions.libyamarketplace.widget.TextViewFontH1
                android:id="@+id/lblVAT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VAT 10%"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_normal"
                android:layout_margin="10dp"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@+id/lblShipping"
                app:layout_constraintTop_toBottomOf="@id/lblShopName1" />

            <com.libyasolutions.libyamarketplace.widget.TextViewFontH1
                android:id="@+id/lblShipping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen16"
                android:text="Ship 11$"
                android:visibility="gone"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_normal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
               />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
