<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_white_gradient"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="@dimen/dimen24"
        android:layout_height="@dimen/dimen24"
        android:layout_margin="@dimen/text_small_size_16"
        android:visibility="gone"
        android:src="@drawable/ic_chevron_right_black_24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RatingBar
        android:id="@+id/rtb_user"
        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/orange"
        android:clickable="false"
        android:isIndicator="false"
        android:max="5"
        android:numStars="5"
        android:progress="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:mrb_progressTint="@color/orange" />


    <EditText
        android:id="@+id/txtReview"
        style="@style/tvReg"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:hint="@string/your_review"
        android:inputType="textMultiLine"
        android:padding="12dp"
        android:gravity="start|top"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/bg_border_grey"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@+id/rtb_user"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <LinearLayout
        android:id="@+id/btnAdd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtReview"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:background="@drawable/blue_fill_round_gradient"
        android:layout_marginHorizontal="@dimen/_80sdp">

        <TextView
            style="@style/tvReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="14dp" />


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>