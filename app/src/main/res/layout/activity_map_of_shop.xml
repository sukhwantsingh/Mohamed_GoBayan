<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlt_header"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="@dimen/_29sdp"
            android:layout_height="@dimen/_29sdp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:background="@drawable/background_border"
            android:padding="12dp"
            android:src="@drawable/ic_back_arrow_new" />

        <TextView
            android:id="@+id/lblShopName"
            style="@style/tvBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:text="@string/shop_name"
            android:textColor="@color/black_heading"
            android:textSize="15dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/lblAddress"
        style="@style/tvReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/map"
        android:textColor="@color/grey_sub_heading"
        android:background="@drawable/background_border"
        android:drawablePadding="8dp"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:textSize="12dp"
        app:drawableStartCompat="@drawable/ic_location_b_new" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:background="@drawable/background_border"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/map"
            class="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"   />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            app:fabSize="normal"
            android:id="@+id/fab_map"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp"
            android:src="@drawable/directions_blue_icon"
            android:tint="@color/white"
            android:layout_height="wrap_content"/>


    </RelativeLayout>
</LinearLayout>