<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutRowOffer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="@dimen/dimen120"
        android:layout_height="@dimen/dimen120"
        android:layout_margin="@dimen/app_margin_small">

        <ImageView
            android:id="@+id/imgFood"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/no_image_available"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom|right"
            android:background="@color/text_shadow_1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimen_05x"
            android:paddingRight="@dimen/dimen_05x">

            <com.libyasolutions.libyamarketplace.widget.TextViewFontEnglish
                android:id="@+id/lblRateNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="5"
                android:textColor="@color/cl_white"
                android:textSize="@dimen/dimen_2x" />

            <ImageView
                android:layout_width="@dimen/dimen_2x"
                android:layout_height="@dimen/dimen_2x"
                android:layout_marginLeft="@dimen/dimen_05x"
                android:background="@drawable/ic_star_selected_small" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>