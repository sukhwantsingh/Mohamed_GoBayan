<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/cl_white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dimen_2x"
        android:layout_height="@dimen/app_layout_bottom_height">
        <View
            android:id="@+id/vieww"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/dimen16"
            android:background="@color/red"/>
    </RelativeLayout>

    <com.libyasolutions.libyamarketplace.widget.MyEditText
        android:textColor="@color/black"
        android:id="@+id/edtSearch"
        android:layout_width="fill_parent"
        android:gravity="right|center_vertical"
        android:layout_height="@dimen/app_button_top_width_height"
        android:layout_marginBottom="@dimen/dimen_1x"
        android:layout_marginLeft="@dimen/dimen_1x"
        android:layout_marginRight="@dimen/dimen_1x"
        android:layout_marginTop="@dimen/dimen_1x"
        android:background="@drawable/bg_black_border"
        android:ems="10"
        android:hint="@string/search_key"
        android:paddingRight="@dimen/margin_normal">

        <requestFocus />
    </com.libyasolutions.libyamarketplace.widget.MyEditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_1x"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spnCategories"
            android:layout_width="0.0dp"
            android:layout_height="@dimen/app_button_top_width_height"
            android:layout_weight="1.0"
            android:background="@drawable/bg_black_border"
            android:gravity="center_vertical" />

        <Spinner
            android:id="@+id/spnCity"
            android:layout_width="0.0dp"
            android:layout_height="@dimen/app_button_top_width_height"
            android:layout_marginRight="@dimen/dimen_1x"
            android:layout_weight="1.0"
            android:background="@drawable/bg_black_border" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/app_button_top_width_height"
        android:background="@drawable/bg_red_border"
        android:layout_margin="@dimen/dimen_1x"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btnSelectMenu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgticMenu"
                    android:layout_width="@dimen/dimen_1x"
                    android:layout_height="@dimen/dimen_1x"
                    android:layout_marginRight="@dimen/dimen_1x"
                    android:src="@drawable/ic_tic"
                    android:visibility="gone" />

                <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                    android:id="@+id/lblMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/menu"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_small_size_16" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnSelectShop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_button_select_right"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgticShop"
                    android:layout_width="@dimen/dimen_1x"
                    android:layout_height="@dimen/dimen_1x"
                    android:layout_marginRight="@dimen/dimen_1x"
                    android:src="@drawable/ic_tic" />

                <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                    android:id="@+id/lblShop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shop"
                    android:textColor="@color/cl_white"
                    android:textSize="@dimen/text_small_size_16" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btnSelectAll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_button_not_select_left"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgTickAll"
                    android:layout_width="@dimen/dimen_1x"
                    android:layout_height="@dimen/dimen_1x"
                    android:layout_marginRight="@dimen/dimen_1x"
                    android:src="@drawable/ic_tic"
                    android:visibility="gone" />

                <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                    android:id="@+id/lblAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/all"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_small_size_16" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnSelectOpen"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_button_select_right"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imgTickOpen"
                    android:layout_width="@dimen/dimen_1x"
                    android:layout_height="@dimen/dimen_1x"
                    android:layout_marginRight="@dimen/dimen_1x"
                    android:src="@drawable/ic_tic" />

                <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                    android:id="@+id/lblOpen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/open"
                    android:textColor="@color/cl_white"
                    android:textSize="@dimen/text_small_size_16" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_1x"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/distance"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/text_size_normal" />

            <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                android:id="@+id/lbl_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_1x"
                android:text="@string/all"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_05x">

            <LinearLayout
                android:id="@+id/layoutText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                    android:id="@+id/lbl_left"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:text="@string/all"
                    android:textColor="@color/gray_dark" />

                <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                    android:id="@+id/lbl_right"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:text="@string/max_distance"
                    android:textColor="@color/gray_dark" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/skb_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutText"
                android:max="100"
                android:paddingLeft="@dimen/dimen_2x"
                android:paddingRight="@dimen/dimen_2x"
                android:progress="0"
                android:progressDrawable="@drawable/customize_seekbar_progress"
                android:thumb="@drawable/customize_seekbar_thumb" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_1x"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spnSortBy"
            android:layout_width="0.0dp"
            android:layout_height="@dimen/app_button_top_width_height"
            android:layout_weight="1.0"
            android:background="@drawable/bg_black_border"
            android:gravity="center_vertical" />

        <Spinner
            android:id="@+id/spnSortType"
            android:layout_width="0.0dp"
            android:layout_height="@dimen/app_button_top_width_height"
            android:layout_marginRight="@dimen/dimen_1x"
            android:layout_weight="1.0"
            android:background="@drawable/bg_black_border" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5x"
        android:gravity="center"
        android:weightSum="2"
        android:orientation="horizontal">

        <com.libyasolutions.libyamarketplace.widget.TextViewFontH1
            android:gravity="center"
            android:id="@+id/btnSearch"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/app_button_top_width_height"
            android:background="@drawable/bg_red_button_with_border"
            android:text="@string/search_upper_case"
            android:textColor="@color/cl_white"
            android:textSize="@dimen/text_normal_size" />
    </LinearLayout>

</LinearLayout>