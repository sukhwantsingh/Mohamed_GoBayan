<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AboutUsActivity">

    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_7x"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="@dimen/dimen_x3x"
            android:layout_height="@dimen/dimen_x3x"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_1x"
            android:src="@drawable/ic_chevron_right_black_24dp" />

        <com.libyasolutions.libyamarketplace.widget.TextViewFontH1
            android:id="@+id/lblTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/app_margin"
            android:layout_toRightOf="@+id/btnBack"
            android:text="@string/about"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal_3x" />
    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/red" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">

            <ImageView
                android:layout_width="@dimen/dimen120"
                android:layout_height="@dimen/dimen120"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logo_libya_bymon" />

            <com.libyasolutions.libyamarketplace.widget.TextViewFontH1
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen16"
                android:gravity="center_horizontal"
                android:text="@string/lblAbout"
                android:textSize="@dimen/text_size_large" />

            <com.libyasolutions.libyamarketplace.widget.TextViewFontEnglish
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen16"
                android:gravity="left"
                android:text="@string/content1"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_normal_1x" />

            <com.libyasolutions.libyamarketplace.widget.TextViewFontEnglish
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingBottom="@dimen/dimen_05x"
                android:text="@string/content2"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_normal" />

            <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen16"
                android:text="@string/about1"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_normal" />

            <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_2x"
                android:text="@string/about2"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_normal" />

            <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_2x"
                android:text="@string/about3"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_normal" />

            <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_2x"
                android:text="@string/about4"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_normal" />

            <ImageView
                android:layout_width="@dimen/dimen150"
                android:layout_height="@dimen/dimen150"
                android:layout_gravity="center"
                android:src="@drawable/imageview_login"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_3x"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dimen_5x"
                    android:layout_height="@dimen/dimen_5x"
                    android:layout_marginLeft="@dimen/dimen_1x"
                    android:src="@drawable/email" />

                <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen8"
                    android:text="@string/email"
                    android:textSize="@dimen/text_size_normal"
                    android:visibility="gone" />

                <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="email"
                    android:text="@string/about_email"
                    android:textSize="@dimen/text_size_normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen8"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dimen_5x"
                    android:layout_height="@dimen/dimen_5x"
                    android:layout_marginLeft="@dimen/dimen_1x"
                    android:src="@drawable/ic_facebook" />

                <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen8"
                    android:text="@string/facebook"
                    android:textSize="@dimen/text_size_normal"
                    android:visibility="gone" />

                <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:text="@string/about_facebook"
                    android:textSize="@dimen/text_size_normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen8"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dimen_5x"
                    android:layout_height="@dimen/dimen_5x"
                    android:layout_marginLeft="@dimen/dimen_1x"
                    android:src="@drawable/internet_new" />

                <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen8"
                    android:text="@string/facebook"
                    android:textSize="@dimen/text_size_normal"
                    android:visibility="gone" />

                <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:text="www.Libyasolutions.com"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen8"
                android:orientation="vertical"
                android:visibility="gone">

                <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="﻿﻿او اذا كنت ترغب في التسيجيل يمكن ملئ نموذج التسجيل المبدئ
في الرابط التالي"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_normal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen8"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dimen_5x"
                    android:layout_height="@dimen/dimen_5x"
                    android:layout_marginLeft="@dimen/dimen_1x"
                    android:src="@drawable/internet_new" />

                <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen8"
                    android:text="@string/facebook"
                    android:textSize="@dimen/text_size_normal"
                    android:visibility="gone" />

                <com.libyasolutions.libyamarketplace.widget.TextViewFontH2
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:text="www.libyasolutions.com/newshop"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_normal" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>